    "sisyphus": { "model": "ollama/kimi-k2.5:cloud" },
    // Autonomous deep worker, "The Legitimate Craftsman"
    "hephaestus": { "model": "ollama/glm-4.7:cloud" },
    // Strategic planning
    "prometheus": { "model": "ollama/kimi-k2.5:cloud" },
    // Master orchestrator
    "atlas": { "model": "ollama/kimi-k2.5:cloud" },
    // Consultation, debugging
    "oracle": { "model": "ollama/kimi-k2.5:cloud" },
    // Docs, GitHub search
    "librarian": { "model": "ollama/kimi-k2.5:cloud" },
    // Fast contextual grep
    "explore": { "model": "ollama/glm-4.7-flash:latest" },
    // PDF/image analysis
    "multimodal-looker": { "model": "ollama/glm-ocr:latest" },
    // Pre-planning analysis
    "metis": { "model": "ollama/kimi-k2.5:cloud" },
    // Plan validation
    "momus": { "model": "ollama/kimi-k2.5:cloud" },
