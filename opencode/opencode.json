{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode@3.8.0"],
  "model": "opencode/glm-5-free",
  "small_model": "opencode/glm-5-free",
  "autoupdate": true,
  "compaction": {
    "auto": true,
    "prune": true
  },
  "tools": {
    "read": true,
    "edit": true,
    "write": true,
    "bash": true
  },
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", ".git/**", "**/*.log"]
  }
}
